extends layout

block content
  h1= title
  p The table has #{query.rows} rows and #{query.cols} columns.
  - const rows = Number(query.rows)
  - const cols = Number(query.cols)
  if (!Number.isInteger(rows) || !Number.isInteger(cols))
    p The value is not an integer
  else if (Number.isInteger(rows) < 1 || Number.isInteger(rows) > 10)
    p Rows is out of range
  else if (Number.isInteger(cols) < 1 || Number.isInteger(cols) > 10)
    p Cols is out of range
  else
    table#outer
      - for(let i=0; i<10; i++) {
        tr#middle
          - for(let j=0; j<10; j++) {
            td= getNum(i, j)
          - }
      - }
  script
    function getNum(i, j) {
      value = 0
      if (i == j)
        return 1
      else if (i > j)
        return 0
      else
        return (j - i) + 1
    }
